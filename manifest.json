{
  "name": "LMOD Plus",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Removes all bloat from the learning modules MIT site.",
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/hook.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "*://learning-modules.mit.edu/*",
    "*://plus.mit.edu/*"
  ]
}
